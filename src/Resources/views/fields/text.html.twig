{% set twigtpl = template and template == 'terms' ? 'terms' : 'pages' %}

{% extends "_" ~ twigtpl ~ ".html.twig" %}

{% block id %}{{ id }}_text_{{ type }}{% endblock %}
{% block label %}<label for="{{ id }}">{{ title|raw }}</label>{% endblock %}

{% block field %}
    <div class="tea-to-field-content text {{ type }}">
        <input type="{{ type }}" name="{{ id }}" id="{{ id }}" value="{{ val|raw }}" {{ attributes|raw }} />

        {% if type == 'range' %}
            <output id="{{ id }}_output">{{ val }}</output>
        {% endif %}

        <p class="tea-to-description">{{ description|raw }}</p>
    </div>
{% endblock %}
